<?xml version="1.0"?>
<PropertyList>
  <name>AnotherGUIStyle</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <text>
    <label>Set GUI style</label>
  </text>

  <group>
    <layout>hbox</layout>
    <halign>fill</halign>
    <default-padding>10</default-padding>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Black Glass</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 100);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>

    <button>
      <legend>Black Blue Glass</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 101);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>

    <button>
      <legend>Black Green Glass</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 102);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>

    <button>
      <legend>Black Orange Glass</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 103);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>
	
    <button>
      <legend>Black Yellow Glass</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 104);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Default</legend>
      <equal>true</equal>
      <binding>
        <command>nasal</command>
        <script>setprop("/sim/gui/current-style", 1);</script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>gui</subsystem>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Exit</legend>
      <equal>true</equal>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

  </group>
</PropertyList>